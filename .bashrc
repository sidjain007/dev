alias c='clear'
alias cd..='cd ..'
alias ..='cd ..'
alias ls='ls -G --color'

alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# Windows commands
alias cls='clear'
alias dir='ls -G --color'

# Prefixed history searching
bind '"\e[A":history-search-backward'
bind '"\e[B":history-search-forward'

